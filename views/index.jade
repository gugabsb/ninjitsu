//box login
div#container-login(style="display:none")
    div#box-login
        div.box-login-borda
            div.box-login-janela
                div.box-login-titulo
                    img#carregando(src="/images/shuriken.gif")
                    span.titulo Nin.Jit.Su 
                div.box-login-conteudo
                    form(action="/login", method="post", name="form")
                        fieldset
                            div.login
                                input#username.loginField(name="username", placeholder="usuário", type="text", autocomplete="on", tabindex="1")
                            div.login
                                input#password.loginField(name="password", placeholder="senha", type="password", autocomplete="off", tabindex="2")
                            div#submit.login
                                input#btFechar(name="fecharLogin",type="button", value="sair", onClick="fnCloseLogin()", tabindex="5")
                                input#btLogin(name="enviar",type="button", value="entrar", onClick="fnLogin()", tabindex="3")
                                p.linkesquecisenha
                                    a(href="javascript:fnShowEsqueciSenha()") Esqueceu da senha?                                
                            div#esquecisenha
                                input#emailcadastrado.loginField(name="emailcadastrado", placeholder="email cadastrado", type="text", autocomplete="on", tabindex="6")
                                input#btCancelar(name="fecharLogin",type="button", value=" x ", onClick="fnCloseEsqueciSenha()", tabindex="8")
                                input#btEsqueciSenha(name="enviar",type="button", value="enviar pro email", onClick="fnEnviaSenha()", tabindex="7")

