    function fnShowLogin(){
        $('#container-cadastro').hide().animate();
        $('#container-login').show('slow').animate();
        $(".msgErro").remove();
    }
    function fnCloseLogin(){
        $('#container-login').hide('slow').animate();
        $(".msgErro").remove();
    }
    function fnShowCadastro(){
        $('#container-login').hide().animate();
        $('#container-cadastro').show('slow').animate();
        $(".msgErro").remove();
    }
    function fnCloseCadastro(){
        $('#container-cadastro').hide('slow').animate();
        $(".msgErro").remove();
    }
    function fnShowEsqueciSenha(){
        $('.login').hide();
        $('#emailcadastrado').val("");          
        $('#esquecisenha').show('slow').animate();
    }
    function fnCloseEsqueciSenha(){
        $('#esquecisenha').hide();      
        $('.login').show();
    }   
